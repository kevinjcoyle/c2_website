@charset "utf-8";
/* CSS Document */

body {
	text-align:center;
}

button {
    background-color:black;
	color:white;
}

.content {
	position: absolute;
	z-index: 50;
	width: 1024px;
}

.mainBody {
	padding-top: 60px;
}

.gradient {
	background:url(../images/BackgroundGradient.jpg) 0% 0% repeat-x;
	height: 197px;
	width: 1024px;
	position: absolute;
	top: 145px;
	z-index: 25;
	margin-left: auto;
	margin-right: auto;
}

.infoArea {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 12px;
}

.infoAreaBody {
	padding-top: 5px;
	padding-left: 30px;
}

.infoAreaBody a {
	color: #339966;
	text-decoration: none;
	font-weight:bolder;
}

.infoAreaTitle {
	font-stretch:expanded;
	font-variant:small-caps;
	font-size: 15px;
	font-weight: bold;
	padding-bottom: 5px;
}

.infoAreaUnderline {
	background-color: black;
	width: 300px;
	height: 2px;
}
	
.main {
	margin-left: auto;
	margin-right: auto;
	text-align: left;
	width: 1024px;
}

.menuItem {
	position: relative;
	font-family: Arial, Helvetica, sans-serif;
	font-weight: bolder;
	font-size: 9px;
    font-variant:small-caps;
	text-decoration: none;
	color: black;
	top:-15px;
	padding-bottom: 15px;
	padding-top: 3px;
	padding-left: 3px;
	padding-right: 3px;
}

.menuItem:hover {
	background-color:black;
	color:white;
}

.menuSpacing {
	padding-left:20px;
}

.selectedMenuItem {
	position: relative;
	font-family: Arial, Helvetica, sans-serif;
	font-weight: bolder;
	font-size: 9px;
    font-variant:small-caps;
	top:-15px;
	text-decoration: none;
	padding-bottom: 15px;
	padding-top: 3px;
	padding-left: 3px;
	padding-right: 3px;
	background-color:black;
	color:white;
}